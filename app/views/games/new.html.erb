
<div class="container">
  <div class="row">
    <h1>New game</h1>
    <div class="col-8">
      <ul class="d-flex flex-wrap">
        <% @letters.each do |letter| %>
          <li class="list-group-item bg-primary m-2 text-white shadow"><%= letter.capitalize %></li>
        <% end %>
      </ul>
      <h6>What is the longest word you can find?</h6>
      <form action="/score" method="post" data-turbo="false" class="d-flex">
        <input type="text" name="word" value="<%= params[:word] %>" class="form-control">
        <input type="submit" value="Play!" class="btn btn-primary">
        <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
        <%= hidden_field_tag :letters, @letters %>
      </form>
    </div>
  </div>
</div>
